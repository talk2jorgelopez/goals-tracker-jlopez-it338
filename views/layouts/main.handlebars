<script type="text/javascript">
// Script to open and close sidebar
function w3_open() {
    document.getElementById("theSidebar").style.display = "block";
}

function w3_close() {
    document.getElementById("theSidebar").style.display = "none";
}

// domReady - Credit: beeker.io
var domReady = function(callback) {
	document.readyState === "interactive" || document.readyState === "complete" ? callback() : document.addEventListener("DOMContentLoaded", callback);
        };
        domReady(function() {
            var deleteButtons = u('.delete');
            deleteButtons.each(function(currentValue) {
                var li = currentValue.closest('li');
                var id = li.id;
                currentValue.addEventListener('click', function() {
                    fetch('goals/' + id, {
                        method: 'delete'
                    }).then(function(responseObj) {
                        li.remove();
                    });
                });
            });
        });
</script>

